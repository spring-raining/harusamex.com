@import "_fonts"

@import "lib/_normalize"

mq-lg = 'min-width: 1240px'
mq-md = 'max-width: 1024px'
mq-sm = 'max-width: 767px'
mq-xs = 'max-width: 480px'

html
body
  margin: 0
  padding: 0

body
  color: #555555
  font-family: 'Montserrat', 'Avenir Next', 'Hiragino Kaku Gothic ProN', 'Meiryo', sans-serif
  font-size: 14px
  line-height: 22px
  letter-spacing: 0.03em
  word-spacing: 0.1em
  -webkit-font-smoothing: antialiased
  -moz-osx-font-smoothing: grayscale

h1, h2, h3, h4, h5, h6
  display: inline-block
  margin: 0
  margin-top: 6px

h1
  font-size: 30px
  line-height: 32px

h2
  font-size: 26px
  line-height: 28px

h3
  font-size: 22px
  line-height: 24px

h4
  font-size: 18px
  line-height: 20px

li
  margin: 0.3em 0

.works-collapse
  margin: 1em 0

#entrypoint
  position: fixed
  width: 100%
  height: 100%

.content
  position: absolute
  left: 0
  right: 0
  margin: 36px auto
  width: 800px

  @media ({mq-lg})
    width: 1100px
  @media ({mq-md})
    width: 680px
  @media ({mq-sm})
    width: 420px
  @media ({mq-xs})
    width: auto
    margin: 18px

.flex
  display: flex
  flex-wrap: wrap

  & > span
    margin: 0 8px 8px 0

span.h
  display: inline-block
  width: 240px

  @media ({mq-sm})
    display: block
